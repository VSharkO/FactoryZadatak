<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/article_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageview_article"
        android:layout_width="@dimen/picture_dimen_width"
        android:layout_height="@dimen/picture_dimen_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/newsimage"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher"

        />
    <TextView
        android:id="@+id/titleview_article"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_dimen_height"
        android:layout_toRightOf="@id/imageview_article"
        android:layout_toEndOf="@id/imageview_article"
        android:textStyle="bold"
        android:padding="@dimen/paddingText"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_textSize"
        />
</RelativeLayout>